generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        String    @id @unique
  email     String    @unique
  name      String
  avatarUrl String
  role      Role      @default(USER)
  companies Company[] @relation("UserCompanies")
  orders    Order[]   @relation("UserOrders")
  watching  Order[]   @relation("UserWatchers")
}

model Company {
  id      String @id @default(cuid())
  name    String
  siret   String
  country String
  users   User[] @relation("UserCompanies")
}

model Order {
  id          String  @id @default(cuid())
  name        String
  description String?
  status      String
  workers     User[]  @relation("UserOrders")
  watchers    User[]  @relation("UserWatchers")
}
